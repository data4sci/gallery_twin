# Database Configuration
DATABASE_URL=sqlite:///./gallery.db

# Security
SECRET_KEY=your-secret-key-here-generate-random-32-chars
ADMIN_PASSWORD=your-admin-password-here

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000

# CORS Settings (optional for production)
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Session Settings
SESSION_COOKIE_MAX_AGE=2592000  # 30 days in seconds
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS
SESSION_COOKIE_SAMESITE=lax

# Content Settings
CONTENT_PATH=./content/exhibits
STATIC_PATH=./static

# Logging
LOG_LEVEL=INFO
